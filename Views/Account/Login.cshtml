@model LoginModel
@{
    ViewData["Title"] = "Login Page";
    Layout = "_Layout";
}

<div class="grid">
    <div class="grid_row">
        <div class="grid_2_column">

            <div class="Login-form">

                <div class="Login-form_icon">
                    <img src="~/img/🦆 icon _person_.png" alt="" class="Login-form_iconPerson" />
                </div>

                <div class="Login-form_title">
                    Login with Rhythm account
                </div>
                
                <div class="Login-form_form">
                    <form asp-action="Login" method="post">

                        <div asp-validation-summary="ModelOnly" class="login-val-summary-errors"></div>

                        <div class="Login-form_text_field">
                            <input id="email" asp-for="Email" autocomplete="off" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <label for="email">Email</label>                         
                        </div>
                   
                        <div class="Login-form_text_field">
                            <input id="password" asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <label for="password">Password</label>
                        </div>

                        

                        <input type="submit" value="Login" />

                        <div class="signup_link">
                            Don't have account? Just <a asp-controller="Account" asp-action="Register">Sign up</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>

        <div class="grid_2_column">

            <div class="Vinyl_with_Reader">
                <img src="~/img/Vinyl with Reader green.png" alt="" class="Login-form_Vinyl" />
            </div>
        </div>

    </div>
</div>