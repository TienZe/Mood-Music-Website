        height: 450px;
        position: relative;
        top:40%;
        margin:auto;
        background: white;
        font-weight: bold;
        font-size: 15px;
        border-radius: 20px;
        animation: modalshow 0.3s linear;
    }

    .MemberDetail_Page_Header{
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        align-items: center;
        padding-top:15px;
        padding-left: 30px;
        background: white;
        color:rgb(15, 0, 0);
        border-radius: 20px;
        font-size: 20px;
    }

    .MemberDetail_Page_Header a{
        cursor: pointer;
    }

    .MemberDetail_Page_Contents i{
        font-size: 110px;
        padding-top: 30px;
        padding-left: 30px;
    }

    .MemberDetail_Page_Contents_Detail{
