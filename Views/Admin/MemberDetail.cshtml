        color: #000000;
        text-align: left;
    }

    .MemberList_Table thead tr th{
        font-weight: 800;
    }

    .MemberList_Table td button{
        border: none;
        background: white;
    }

    .MemberList_Table tbody tr:nth-of-type(even) td button{
        background-color: #e6e2e2;
        
    }

    .MemberList_Table th,
