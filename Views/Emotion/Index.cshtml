@model IEnumerable<Emotion>

@{
    ViewData["Title"] = "List of emotions";
}

@if (Model.Count() > 0)
{

    <table class="table table-bordered table-striped">
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
        @foreach (Emotion emotion in Model)
        {
            <tr>
                <td>@emotion.Name</td>
                <td>
                    <form asp-action="Delete" method="post">
                        <a asp-action="Edit" asp-route-id="@emotion.EmotionId" class="btn btn-secondary">Edit</a>
                        <input type="hidden" name="id" value="@emotion.EmotionId" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="text-center">No Emotions</div>
}

<a asp-action="Create" class="btn btn-primary">Add new emotion</a>
